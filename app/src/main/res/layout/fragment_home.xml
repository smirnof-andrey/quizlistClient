<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"></ListView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editModuleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Module name" />

            <EditText
                android:id="@+id/editModuleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Module info" />

            <EditText
                android:id="@+id/editText"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                android:singleLine="false"
                android:text="31" />

            <Button
                android:id="@+id/buttonGetModules"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="Get modules" />

            <Button
                android:id="@+id/buttonGetModuleById"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Get module by id" />

            <Button
                android:id="@+id/buttonCreateModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create module" />

            <Button
                android:id="@+id/buttonUpdateModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update module" />

            <Button
                android:id="@+id/buttonDeleteModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete module" />

            <Button
                android:id="@+id/createCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create card" />

            <TextView
                android:id="@+id/textInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="info"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>